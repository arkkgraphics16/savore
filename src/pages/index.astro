---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import HeroSection from '../components/HeroSection.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Home" description="Savore - Fine Dining Restaurant Experience">
  <Navigation />
  <HeroSection />
  <!-- Why Choose Us Section -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-burgundy text-center mb-16">
        Why Choose Savore
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="text-center">
          <div class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold text-burgundy mb-4">Fresh Ingredients</h3>
          <p class="text-gray-600">We source only the finest, locally sourced ingredients for every dish.</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold text-burgundy mb-4">Expert Chefs</h3>
          <p class="text-gray-600">Our culinary team brings decades of experience and passion to every plate.</p>
        </div>
        <div class="text-center">
          <div class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-serif font-bold text-burgundy mb-4">Memorable Experience</h3>
          <p class="text-gray-600">Create lasting memories in our elegant and welcoming atmosphere.</p>
        </div>
      </div>
    </div>
  </section>
  <Footer />
</BaseLayout>
