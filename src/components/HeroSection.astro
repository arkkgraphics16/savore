<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-cream via-amber-50 to-rose-50 pt-20">
  <!-- Floating Decorative Blobs -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-32 left-20 w-72 h-72 bg-burgundy/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-40 left-10 w-40 h-40 bg-gold/30 rounded-full blur-2xl animate-float-delayed"></div>
    <div class="absolute top-1/3 left-1/4 w-20 h-20 bg-burgundy/30 rounded-full blur-xl animate-pulse"></div>
    <div class="absolute top-48 right-20 w-96 h-96 bg-gold/20 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-32 right-40 w-56 h-56 bg-burgundy/15 rounded-full blur-2xl animate-float-delayed"></div>
    <div class="absolute -bottom-20 -right-20 w-80 h-80 bg-gold/25 rounded-full blur-3xl"></div>
  </div>
  <div class="relative z-10 max-w-7xl mx-auto px-6 py-32 text-center">
    <h1 class="text-6xl md:text-8xl font-serif font-bold text-burgundy mb-6 leading-tight">
      Welcome to <span class="text-gold">Savore</span>
    </h1>
    <p class="text-xl md:text-2xl text-gray-700 mb-10 max-w-3xl mx-auto">
      Where Every Meal Tells a Story of Passion, Flavor, and Excellence
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <button class="bg-burgundy text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-burgundy/90 transition shadow-lg">
        Reserve a Table
      </button>
      <button class="bg-white text-burgundy border-2 border-burgundy px-8 py-4 rounded-lg text-lg font-semibold hover:bg-burgundy hover:text-white transition">
        View Menu
      </button>
    </div>
    <!-- Featured Video/Image Section -->
    <div class="mt-20 relative">
      <div class="bg-white rounded-2xl shadow-2xl p-8 max-w-5xl mx-auto">
        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl overflow-hidden aspect-video flex items-center justify-center">
          <div class="text-center">
            <svg class="w-24 h-24 mx-auto text-gold mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <p class="text-white text-lg">Featured Restaurant Video</p>
            <p class="text-gray-400 text-sm mt-2">Experience our ambiance</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0) translateX(0); }
    33% { transform: translateY(-30px) translateX(20px); }
    66% { transform: translateY(20px) translateX(-20px); }
  }
  @keyframes float-delayed {
    0%, 100% { transform: translateY(0) translateX(0); }
    33% { transform: translateY(30px) translateX(-15px); }
    66% { transform: translateY(-20px) translateX(25px); }
  }
  .animate-float {
    animation: float 20s ease-in-out infinite;
  }
  .animate-float-delayed {
    animation: float-delayed 25s ease-in-out infinite;
  }
</style>
